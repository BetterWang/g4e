{
    "version": "2.0.0",
    "tasks": [
        {
        "type": "shell",
        "label": "g++ build active file",
        "command": "spack",
        "args": ["load", "g4e@local", "&&", "make", "install"],
        "options": {
            "cwd": "${workspaceFolder}/work"
        },
        "problemMatcher": ["$gcc"],
        "group": {
            "kind": "build",
            "isDefault": true
        }
        }
    ]
}